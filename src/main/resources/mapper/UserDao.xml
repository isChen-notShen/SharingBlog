<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="group.blog.dao.UserDAO">

    <select id="queryById" resultType="User" parameterType="int">
        select id, name, password, description from USER where id = #{id}
    </select>

    <select id="queryByName" resultType="User" parameterType="String">
        select id, name, password, description from USER where name = #{name}
    </select>

</mapper>